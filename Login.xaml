<Page x:Class="QuizSEBASTIANGOMEZ.Login"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:QuizSEBASTIANGOMEZ"
      mc:Ignorable="d" 
      d:DesignHeight="350" d:DesignWidth="790"
      Title="Login">

    <Grid Background="#FFFFA3A3">

        <Label Content="Login" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top" FontSize="36" FontWeight="Bold"/>
        <Label Content="Username" HorizontalAlignment="Center" Margin="0,75,0,0" VerticalAlignment="Top" FontSize="16" FontWeight="Bold"/>
        <Label Content="Password" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="16" FontWeight="Bold"/>
        <TextBox Name="txtUsername" HorizontalAlignment="Center" Margin="0,121,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Width="86" Height="23"/>
        <PasswordBox Name="txtPassword" HorizontalAlignment="Center" Margin="0,196,0,0" VerticalAlignment="Top" Width="86" Height="24"/>
        <Button Name="btnLogin" Content="Log-in" HorizontalAlignment="Center" Margin="0,247,0,0" VerticalAlignment="Top" Height="25" Width="58" Click="btnLogin_Click"/>

    </Grid>
</Page>
